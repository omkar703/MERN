<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Profile Form</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <style>
            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(-20px); }
                to { opacity: 1; transform: translateY(0); }
            }
            .animate-fade-in {
                animation: fadeIn 0.6s ease-out;
            }
            .input-transition {
                transition: all 0.3s ease;
            }
            .input-transition:focus {
                transform: scale(1.02);
            }
        </style>
    </head>
    <body class="bg-gray-900 min-h-screen flex items-center justify-center"></body>
        <div class="bg-gray-800 p-8 rounded-2xl shadow-2xl max-w-md w-full backdrop-blur-xl border border-gray-700 animate-fade-in">
            <div class="text-center mb-8"></div>
                <h2 class="text-2xl font-bold text-gray-100 mb-4">Profile</h2>

                <!-- Profile Picture Display -->
                <div class="mb-4"></div>
                    <div class="w-32 h-32 mx-auto rounded-full bg-gray-700 flex items-center justify-center overflow-hidden border-4 border-gray-600 hover:border-blue-500 transition-all duration-300">
                        <img
                            id="preview"
                            src="/default-avatar.png"
                            alt="Profile Picture"
                            class="w-full h-full object-cover"
                        />
                    </div>
                </div>

                <!-- Profile Form -->
                <form class="space-y-4">
                    <!-- Name Input -->
                    <div>
                        <input
                            type="text"
                            placeholder="Enter your name"
                            class="w-full px-4 py-2 border rounded-xl bg-gray-700 text-gray-100 border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 input-transition placeholder-gray-400"
                        />
                    </div>

                    <!-- Profile Picture Input -->
                    <div>
                        <input
                            type="file"
                            accept="image/*"
                            class="w-full px-4 py-2 border rounded-xl bg-gray-700 text-gray-100 border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 input-transition file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-500 file:text-white hover:file:bg-blue-600"
                        />
                    </div>

                    <!-- Email Input -->
                    <div>
                        <input
                            type="email"
                            placeholder="Enter your email"
                            class="w-full px-4 py-2 border rounded-xl bg-gray-700 text-gray-100 border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 input-transition placeholder-gray-400"
                        />
                    </div>

                    <!-- Password Input -->
                    <div>
                        <input
                            type="password"
                            placeholder="Enter your password"
                            class="w-full px-4 py-2 border rounded-xl bg-gray-700 text-gray-100 border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 input-transition placeholder-gray-400"
                        />
                    </div>

                    <!-- Submit Button -->
                    <button
                        type="submit"
                        class="w-full bg-blue-500 text-white py-3 rounded-xl hover:bg-blue-600 transition-all duration-300 transform hover:scale-105 font-medium"
                    >
                        Save Profile
                    </button>
                </form>
            </div>
        </div>
    </body>
</html>
